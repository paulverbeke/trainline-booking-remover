{
  "name": "trainline-booking-remover",
  "version": "1.0.0",
  "description": "A browser extension to uncheck and remove the booking.com checkbox on thetrainline.com and prevent it from opening a new tab.",
  "scripts": {
    "build:clean": "node -e \"const fs=require('fs');if(fs.existsSync('dist'))fs.rmSync('dist',{recursive:true})\"",
    "build:copy": "node -e \"const fs=require('fs');fs.cpSync('src','dist',{recursive:true});fs.cpSync('assets','dist/assets',{recursive:true})\"",
    "build:zip": "node scripts/build-zip.js",
    "build": "npm-run-all build:clean build:copy build:zip",
    "validate": "web-ext lint --source-dir=dist",
    "test": "echo 'Test script placeholder'",
    "lint": "echo 'Lint script placeholder'"
  },
  "keywords": [
    "browser-extension",
    "thetrainline",
    "booking.com",
    "userscript"
  ],
  "author": "Paul Verbeke",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "archiver": "^7.0.1",
    "npm-run-all": "^4.1.5",
    "web-ext": "^8.3.0"
  }
}