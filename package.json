{
  "name": "travel-experience-cleaner",
  "version": "1.0.4",
  "description": "A browser extension that unchecks promotional checkboxes and hotel search options on travel booking websites like Trainline, FlixBus, and Skyscanner.",
  "scripts": {
    "scrape:domains": "node scripts/scrape-domains.js",
    "build:update-domains": "node scripts/update-domains.js",
    "build:update-version": "node scripts/update-version.js",
    "build:package": "web-ext build --source-dir=src --overwrite-dest --filename {name}-{version}.zip",
    "build": "npm-run-all build:update-domains build:update-version build:package",
    "validate": "web-ext lint --source-dir=src",
    "lint": "eslint src scripts --fix"
  },
  "keywords": [
    "browser-extension",
    "booking.com",
    "trainline",
    "flixbus",
    "skyscanner",
    "userscript"
  ],
  "author": "Paul Verbeke",
  "license": "MIT",
  "dependencies": {},
  "devDependencies": {
    "eslint": "^8.57.0",
    "npm-run-all": "^4.1.5",
    "web-ext": "^8.3.0"
  }
}
