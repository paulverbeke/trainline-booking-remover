{
  "manifest_version": 3,
  "name": "Booking.com Checkbox Remover",
  "version": "1.0.2",
  "description": "Unchecks and removes the Booking.com checkbox on several websites, like Trainline and FlixBus",
  "icons": {
    "32": "assets/icon-32.png",
    "64": "assets/icon-64.png",
    "128": "assets/icon-128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "trainline-booking-remover@example.com",
      "data_collection_permissions": {
        "required": [
          "none"
        ]
      }
    }
  },
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://www.thetrainline.com/*",
        "*://www.flixbus.com/*"
      ],
      "js": [
        "content-scripts/content.js"
      ]
    }
  ]
}
